<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/race_schedule_heat_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:divider="@null">

    </ListView>

    <android.support.v7.widget.CardView
        android:id="@+id/race_schedule_round_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardCornerRadius="15dp"
        card:cardPreventCornerOverlap="false"
        card:cardBackgroundColor="@color/red"
        card:cardElevation="4dp">

        <TextView
            android:id="@+id/race_schedule_round_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26sp"
            android:textColor="@color/white"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>

