<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cards="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        tools:context="com.example.peter.racemanager.fragments.BuildRaceStructureAFragment">

        <android.support.v7.widget.CardView
            android:id="@+id/build_race_a_card_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/build_race_a_general_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use this wizard to do a full restructure or rebuild of a race. Completing this wizard WILL replace all old data."
                android:gravity="center_horizontal" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maximum racers per heat:"/>

                <EditText
                    android:id="@+id/build_race_a_num_racers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/build_race_a_card_frequencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select allowed frequency bands" />

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_fatshark"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Fatshark/ImmersionRC (5740-5880)" />

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_boscam_e"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Boscam E (5645-5945)"/>

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_boscam_a"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Boscam A (5725-5885)" />

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_raceband"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Raceband (5658-5917)" />

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_betaband"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Beta Band (5733-5866)" />

                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/build_race_a_checkbox_1.3ghz"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="1.3 Ghz (1080-1360)" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/build_race_a_card_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <android.support.v7.widget.AppCompatCheckedTextView
                android:id="@+id/build_race_a_checkbox_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Use template" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/build_race_a_card_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/build_race_a_cancel"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@drawable/custom_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Cancel"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="0"
                    android:background="@color/grey200" />

                <TextView
                    android:id="@+id/build_race_a_continue"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@drawable/custom_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Continue" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>