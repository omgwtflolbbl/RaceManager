<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cards="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:id="@+id/race_card_racer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        cards:contentPaddingTop="8dp"
        cards:cardUseCompatPadding="true"
        cards:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/race_racer_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/profile"
                    cards:civ_border_width="2dp"
                    cards:civ_border_color="@color/MultiGPBlue"/>

                <TextView
                    android:id="@+id/race_racer_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="72dp"
                    android:paddingStart="72dp"
                    android:paddingRight="144dp"
                    android:paddingEnd="144dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/MultiGPBlue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Hollywood_FPV"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="144dp"
                    android:layout_marginEnd="144dp"
                    android:background="@color/MultiGPLightGray" />

                <TextView
                    android:id="@+id/race_racer_frequency"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="72dp"
                    android:layout_marginEnd="72dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/MultiGPBlue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="5685"/>

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_below="@id/race_racer_frequency"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="0dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginEnd="72dp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/MultiGPBlue"
                    android:textSize="10dp"
                    android:text="FREQUENCY"/>

                <TextView
                    android:id="@+id/race_icon_frequency"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="72dp"
                    android:layout_marginEnd="72dp"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="@color/MultiGPRed"
                    android:text="@string/fa_wifi"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="72dp"
                    android:layout_marginEnd="72dp"
                    android:background="@color/MultiGPLightGray"/>

                <TextView
                    android:id="@+id/race_racer_points"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/MultiGPBlue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="18"/>

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_below="@id/race_racer_points"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/MultiGPBlue"
                    android:textSize="10dp"
                    android:text="PTS"/>

                <TextView
                    android:id="@+id/race_icon_points"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="@color/MultiGPRed"
                    android:text="@string/fa_trophy"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/race_status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="12dp"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:background="@color/MultiGPGreen">

                <TextView
                    android:id="@+id/race_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:alpha=".50"
                    android:textSize="13dp"
                    android:text="Status: " />

                <TextView
                    android:id="@+id/race_current_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/race_status_text"
                    android:layout_toEndOf="@+id/race_status_text"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="The race is being prepared" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/race_timer_ticker_pilot"
                    android:textColor="@color/white"
                    android:alpha=".50"
                    android:textSize="13dp"
                    android:text="Time: "/>

                <TextView
                    android:id="@+id/race_timer_ticker_pilot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="00:00:000"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/race_card_racer">

        <LinearLayout
            android:id="@+id/race_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            tools:context=".fragments.RaceFragment">

            <android.support.v7.widget.CardView
                android:id="@+id/race_card_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cards:contentPadding="8dp"
                android:layout_marginBottom="8dp"
                cards:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/race_timer_ticker_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:textColor="@color/MultiGPBlack"
                        android:background="@drawable/background_admin_timer"
                        android:textSize="48sp"
                        android:text="00:00:000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/race_time_prompt"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginEnd="1dp"
                                android:gravity="center"
                                android:textColor="@color/MultiGPBlack"
                                android:text="Race\nTime"/>

                            <EditText
                                android:id="@+id/race_time_input"
                                android:layout_width="60dp"
                                android:layout_height="42dp"
                                android:layout_toRightOf="@id/race_time_prompt"
                                android:layout_toEndOf="@id/race_time_prompt"
                                android:inputType="number"
                                android:layout_marginTop="3dp"
                                android:background="@android:drawable/editbox_background_normal"
                                android:gravity="center"
                                android:textColor="@color/MultiGPRed"
                                android:imeOptions="actionDone"
                                android:singleLine="true"
                                android:text="120"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@id/race_time_input"
                                android:layout_toEndOf="@id/race_time_input"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="Seconds"/>

                        </RelativeLayout>

                        <Button
                            android:theme="@style/RedAccent"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:id="@+id/race_admin_flow_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Prep Next"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/race_admin_jump_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:stateListAnimator="@null"
                            android:layout_weight="1"
                            android:textColor="@color/MultiGPGray"/>

                        <Button
                            android:id="@+id/race_attendance_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:stateListAnimator="@null"
                            android:textColor="@color/MultiGPGray"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/race_builder_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:stateListAnimator="@null"
                            android:textColor="@color/MultiGPGray"
                            android:text="Rebuild Race"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/race_current_heat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/race_spotter_heat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/race_ondeck_heat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                android:id="@+id/race_card_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cards:contentPadding="8dp"
                android:layout_marginBottom="8dp"
                cards:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/race_schedule_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:text="@string/race_schedule_button" />

                    <Button
                        android:id="@+id/race_info_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:text="@string/race_info_button" />

                    <Button
                        android:id="@+id/race_racers_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:text="@string/race_racers_button" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>