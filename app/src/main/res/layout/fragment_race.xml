<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cards="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/race_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".fragments.RaceFragment">

        <android.support.v7.widget.CardView
            android:id="@+id/race_card_racer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Racer Information"/>

                <TextView
                    android:id="@+id/race_racer_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your assigned frequency:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your current point total:"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/race_card_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/race_current_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Current status: The race is being prepared"/>

                <TextView
                    android:id="@+id/race_timer_ticker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="48dp"
                    android:text="00:00:000" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/race_card_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Admin Panel"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Race length (seconds)"/>

                    <EditText
                        android:id="@+id/race_time_input"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:background="@android:drawable/editbox_background_normal"
                        android:gravity="center"
                        android:textColor="@android:color/holo_blue_light"
                        android:text="120"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="Note: A 15 second preparation buffer is automatically added."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/race_admin_flow_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Race"/>

                    <Button
                        android:id="@+id/race_admin_jump_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Heat"/>

                </LinearLayout>

                <Button
                    android:id="@+id/race_builder_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rebuild Race"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/race_card_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/race_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/race_info_button" />

                <Button
                    android:id="@+id/race_schedule_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/race_schedule_button" />

                <Button
                    android:id="@+id/race_racers_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/race_racers_button" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>