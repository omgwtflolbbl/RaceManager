<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/race_schedule_heat_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:contentPaddingLeft="3dp"
    card:contentPaddingTop="8dp"
    card:contentPaddingBottom="8dp"
    card:contentPaddingRight="8dp"
    card:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <android.support.v7.widget.GridLayout
        android:id="@+id/race_schedule_round_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MultiGPLightGray"
        card:columnCount="5"
        android:clipChildren="false"/>

</android.support.v7.widget.CardView>
