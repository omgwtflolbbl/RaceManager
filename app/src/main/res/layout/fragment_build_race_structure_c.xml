        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPaddingTop="8dp"
            cards:contentPaddingLeft="8dp"
            cards:contentPaddingRight="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/build_race_c_general_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assign racers to their designated slots/frequency. If everyone is capable of using all the frequencies, you can automatically assign everyone. Otherwise, you can manually assign racers and slots. These can always be changed later if necessary (for instance, if someone finds they can only use a certain frequency)."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/build_race_c_auto_button"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_blue_light"
                        android:background="@drawable/custom_button"
                        android:text="Auto-assign" />

                    <TextView
                        android:id="@+id/build_race_c_reset_button"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_blue_light"
                        android:background="@drawable/custom_button"
                        android:text="Restart"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
