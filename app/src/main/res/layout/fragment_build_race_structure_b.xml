                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/build_race_b_slot_a_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slot A Frequencies"/>

                <com.example.peter.racemanager.ExpandableHeightListView
                    android:id="@+id/build_race_b_slot_a_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null">
                </com.example.peter.racemanager.ExpandableHeightListView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/build_race_b_slot_a_add_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/holo_blue_light"
                        android:gravity="center"
                        android:text="Add a frequency"/>

                    <TextView
                        android:id="@+id/build_race_b_slot_a_swap"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_toStartOf="@id/build_race_b_slot_a_add_frequency"
                        android:textColor="@android:color/holo_blue_light"
                        android:gravity="center"
                        android:text="Something else"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

