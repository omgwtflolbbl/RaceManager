        <android.support.v7.widget.CardView
            android:id="@+id/build_race_b_card_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cards:contentPadding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/build_race_b_general_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose which frequencies will occupy which slots (ex. 5645 in slot A, 5880 and 5885 in slot D). One offs and special cases can also be assigned and then specified later."/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/build_race_b_card_slot_a"
