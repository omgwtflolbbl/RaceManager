<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.peter.racemanager.fragments.RaceRacersFragment">

    <LinearLayout
        android:id="@+id/race_racers_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/race_racers_sort_points"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:background="@drawable/custom_button"
            android:text="Sort Points"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_weight="0"
            android:background="@color/grey200" />

        <TextView
            android:id="@+id/race_racers_sort_name"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:background="@drawable/custom_button"
            android:text="Sort Names" />

    </LinearLayout>

    <View
        android:id="@+id/race_racers_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/grey200"
        android:layout_above="@id/race_racers_sort"/>

    <ListView
        android:id="@+id/race_racers_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_above="@id/race_racers_line">

    </ListView>

</RelativeLayout>
