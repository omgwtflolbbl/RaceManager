<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/race_info_racers_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/race_info_racers_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/race_info_racers_photo"
        android:layout_toEndOf="@+id/race_info_racers_photo"
        android:layout_alignParentTop="true"
        android:text="Some Dude's Username" />

</RelativeLayout>