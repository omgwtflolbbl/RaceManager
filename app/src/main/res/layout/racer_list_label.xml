<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/race_racers_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/race_racers_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/race_racers_photo"
        android:layout_toEndOf="@+id/race_racers_photo"
        android:layout_alignParentTop="true"
        android:text="Some Dude's Username" />

    <TextView
        android:id="@+id/race_racers_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/race_racers_photo"
        android:layout_toEndOf="@+id/race_racers_photo"
        android:layout_below="@+id/race_racers_username"
        android:text="Frequency: 5945" />

    <View
        style="@style/Divider"
        android:layout_width="2dp"
        android:layout_height="75dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_toStartOf="@+id/race_racers_points" />

    <TextView
        android:id="@+id/race_racers_points"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:text="12Pts" />

</RelativeLayout>